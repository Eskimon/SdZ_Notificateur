{
    "name": "SdZ Notificateur",
    "version": "1.4.0",
    "manifest_version": 2,
    "description": "Extensions pour Google Chrome pour connaitre le nombre de notifications ou MP SdZ sans avoir besoin d'ouvrir le site",
    "offline_enabled": false,
    "icons": { 
    	"16": "icons/icone_16.png",
		"48": "icons/icone_48.png",
		"128": "icons/icone_128.png"
		},
	"permissions": [
		"*://*.siteduzero.com/*",
		"tabs",
		"alarms",
		"notifications",
		"storage"
	],
	"options_page":"options.html",
    "browser_action": {
		"default_icon": "icons/icone_38.png",
    	"default_title": "SdZ Notificateur",
    	"default_popup": "popup.html"
	},
    "background": {
    	"scripts": ["jquery.js","background.js"],
    	"persistent": false
	}
}
